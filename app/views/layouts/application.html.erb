<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        <li><%= link_to "All Products", products_path %></li>
      </ul>
    </nav>
    <p><%= link_to "Register", register_path %></p>
    <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <%= select_tag(:category_type, content_tag(:option, 'All Products', :value=>"all") + options_from_collection_for_select(Category.all, :id, :name)) %>
      <%= text_field_tag :search, params[:search], placeholder: "Search products or category" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %>
    <%= yield %>
  </body>
</html>
